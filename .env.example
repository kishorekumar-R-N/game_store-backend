# Backend environment variables example
# MongoDB
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/mydb

# JWT
JWT_SECRET=your_jwt_secret_here

# Razorpay (optional)
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# Frontend base URL used to build reset links
FRONTEND_URL=http://localhost:5173

# SMTP settings for sending emails (optional). If set, the server will send password reset emails.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM="Game Store <no-reply@example.com>"
